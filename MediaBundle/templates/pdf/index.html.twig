{% extends 'base.html.twig' %}

{% block title %}PDFList{% endblock %}

{% block pageheader %}
    <h1>PDFList</h1>
    <p class="count">
        Displaying {{ pdfs|length }} PDFs of {{ pdfs.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('nines_media_pdf_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed '@NinesMedia/pdf/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(pdfs) }}
    </div>

{% endblock %}
