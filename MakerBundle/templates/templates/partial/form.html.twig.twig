{% autoescape false %}
{{ '{{ form_start(form) }}' }}
{{ '{{ form_widget(form) }}' }}
<div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        <input type="submit" value="Save" class="btn btn-primary" />
        {{ '{% if ' ~ entity_twig_var_singular ~ '.id' ~ ' is null %}' }}
        <a href="{{ "{{ path('" ~ route_name ~ "_index') }}" }}" class="btn btn-warning">
            Cancel
        </a>
        {{ '{% else %}' }}
            <a href="{{ "{{ path('" ~ route_name ~ "_show', { 'id': " ~ entity_twig_var_singular ~ ".id" ~ " }) }}" }}" class="btn btn-warning">
                Cancel
            </a>
        {{ '{% endif %}' }}
    </div>
</div>
{{ '{{ form_end(form) }}' }}

{% endautoescape %}
