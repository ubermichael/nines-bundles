{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Comment Search</h1>
    {% if commentNotes|length %}
        <p class="count">
            Displaying {{ commentNotes|length }} comments of {{ commentNotes.getTotalItemCount }} total.
        </p>
    {% endif %}
{% endblock %} 

{% block body %}

    <form method="get" action="{{ path('admin_comment_note_fulltext') }}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

    {% if commentNotes|length %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Fullname</th>
                    <th>Content</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
            {% for commentNote in commentNotes %}
                <tr>
                    <td>{{ commentNote.user.fullname }}</td>
                    <td>
                        <a href="{{ path('admin_comment_show', { 'id': commentNote.comment.id }) }}">
                            {{ commentNote.content }}
                        </a>
                    </td>
                    <td>{% if commentNote.created %}{{ commentNote.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(comments) }}
        </div>
    {% endif %}

{% endblock %}
