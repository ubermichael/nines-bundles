{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Comment List</h1>
    <p class="count">
        Displaying {{ comments|length }} comments of {{ comments.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('admin_comment_fulltext') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-2">
            <div class="panel-heading"><strong>Filter</strong></div>
            <div class="panel-body">
                <p>Filter the list of comments with these links.</p>
            </div>
            <ul class='list-group'>
                {% for status in statuses %}
                    <li class='list-group-item'>
                        <a href="{{path('admin_comment_index', { 'status': status.name})}}">{{ status.label}}</a>
                    </li>
                {% endfor %}
                <li class='list-group-item'><a href="{{path('admin_comment_index')}}">All Comments</a></li>
            </ul>
        </div>
        <div class="col-sm-10">

            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                    <tr>
                        <th>Status</th>
                        <th>Content</th>
                        <th>Submitter</th>
                        <th>Entity</th>
                    </tr>
                </thead>
                <tbody>
                    {% for comment in comments %}
                        {% set entity = service.findEntity(comment) %}
                        <tr>
                            <td>
                                {% if comment.status is not null %}
                                    {{ comment.status.label }}
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('admin_comment_show', { 'id': comment.id }) }}">
                                    {{ comment.content|truncate(40) }}
                                </a>
                            </td>
                            <td>{{ comment.fullname }}</td>
                            <td>{{ service.entityType(comment) }} <a href="{{ service.entityUrl(comment)}}">{{ entity|truncate(40) }}</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="navigation">
                {{ knp_pagination_render(comments) }}
            </div>
        </div>
    </div>

{% endblock %}
