{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>PostCategory</h1>
 {% endblock %} 

{% block body %}

    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('post_category_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        <a href="{{ path('post_category_edit', { 'id': postCategory.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('post_category_delete', { 'id': postCategory.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this PostCategory?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
            <td>{{ postCategory.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
            <td>{{ postCategory.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
            <td>{{ postCategory.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if postCategory.created %}{{ postCategory.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if postCategory.updated %}{{ postCategory.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
